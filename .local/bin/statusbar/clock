#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

data=$(date '+%a %d %b %Y')
ora=$(date '+%k:%M')

printf "%s %s " "ğŸ“… $data " "$icon $ora "

case $BLOCK_BUTTON in
	1) notify-send "Mese corrente" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && notify-send "Appuntamenti" "$(calcurse -D ~/.config/calcurse -d3)" ;;
	2) $TERMINAL -e calcurse -D ~/.config/calcurse ;;
	3) notify-send "ğŸ“… Data/ora" "\- Il tasto sinistro mostra gli appuntamenti per i prossimi tre giorni tramite \`calcurse -d3\` e il mese tramite \`cal\`
- Tasto medio lancia calcurse" ;;
esac
