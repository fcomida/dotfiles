#!/bin/sh

# A dmenu wrapper script for system functions.

session_id=$XDG_SESSION_ID

cmds="\
ğŸ–¥ spegni	sudo -A shutdown -h now
ğŸ”ƒ riavvia	 sudo -A reboot
ğŸšª termina sessione	loginctl kill-session $session_id --signal=TERM
ğŸ”’ blocco schermo	lock-screen
â™» riavvia dwm	kill -HUP $(pidof -s dwm)
â„ sospendi sistema	sudo systemctl suspend
"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu -c -l 6 -o .7 -dim .6 -fn NotoSans:size=16)"

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2`
